<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/member_attribute"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/groupListButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/groupListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickGroupListButton"
        android:text="@string/group_list"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/positionListButton"

        app:layout_constraintStart_toStartOf="@id/positionListButton"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button

        android:id="@+id/positionListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="onClickPositionListButton"
        android:text="@string/position_list"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupListButton" />


</android.support.constraint.ConstraintLayout>