<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageListActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/member_info_manage"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/memberListButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/memberListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickMemberListButton"
        android:text="@string/member_list"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/addMemberButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <Button
        android:id="@+id/addMemberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAddMemberButton"
        android:text="@string/register_member"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/groupInfo"
        app:layout_constraintStart_toStartOf="@id/memberListButton"
        app:layout_constraintTop_toBottomOf="@id/memberListButton" />

    <Button
        android:id="@+id/groupInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="onClickGroupButton"
        android:text="@string/group_info"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/memberListButton"
        app:layout_constraintTop_toBottomOf="@id/addMemberButton" />
</android.support.constraint.ConstraintLayout>